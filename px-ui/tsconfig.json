{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["node", "vite/client"],
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@config/*": ["config/*"],
      "@features/*": ["features/*"],
      "@interfaces/*": ["interfaces/*"],
      "@gql/*": ["gql/*"],
      "@hooks/*": ["hooks/*"],
      "@lib/*": ["lib/*"],
      "@routes/*": ["routes/*"],
      "@types/*": ["types/*"],
      "@test/*": ["test/*"],
      "@validator/*": ["validator/*"],
      "@utils/*": ["utils/*"],
    }
  },
  "include": ["src", "**/*.ts", "**/*.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": ["node_modules", "public", "src/gql/generated.ts", "vite.config.ts"]
}
